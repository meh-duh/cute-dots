[module/date]
type = internal/date
; Seconds to sleep between updates
interval = 5

time = %I:%M
; when clicking on time
time-alt = %Y-%m-%d

format = <label>
format-background = #1fccac
format-foreground = #bb00fa
format-prefix = 
label = %time%






